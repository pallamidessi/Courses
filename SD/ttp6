compr () {
 ARCH="$1"
 shift
 rm -f ${ARCH}.tgz ${ARCH}.zip
 tar cvzof ${ARCH}.tgz $*
 zip -r -9 ${ARCH}.zip $*
} 
cd TP6
for i in ServeurDiscussion CorrecServeurDiscussion CorrecExoCallBack ExoCallBack TelephoneExo CorrecTelephoneExo HelloCallBack
do
  cd $i
  echo $PWD
  if (test -f clean) then ./clean; fi
  if (test -f remove) then ./remove; fi
  if (test -f detruit) then ./detruit; fi
  rm -f *~ *.class \#* */*~ */*.class */\#*
  ls -tla
  cd ..
done
cd ..
set -v
compr Tout_TP6 ttp6 TP6
compr Corr_TP6 ttp6 TP6/Correc*
compr TP6 ttp6 TP6/Me_Lire.txt TP6/ServeurDiscussion TP6/HelloCallBack TP6/TelephoneExo TP6/ExoCallBack 

